generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:password@localhost:3306/tech_hub?schema=public"
}

model product {
  id           Int           @id @default(autoincrement())
  qtd          Int
  price        Float
  totalValue   Float
  name         String        @unique 
  category     Category
  manufacturer Manufacturer
  sells        sells[]
}

model sells {
  id           Int      @id @default(autoincrement())
  date         DateTime
  qtd          Int
  price        Float
  totalValue   Float 
  product      product  @relation(fields: [productId], references: [id])
  productId    Int
}

enum Category {
  ELECTRONICS
  FURNITURE
  CLOTHING
  FOOD
  BEAUTY
  TOYS
  SPORTS
  AUTOMOTIVE
  BOOKS
  MUSIC
}

enum Manufacturer {
  SONY
  SAMSUNG
  APPLE
  LG
  NIKE
  ADIDAS
  TOYOTA
  HONDA
  PUMA
  LOREAL
}